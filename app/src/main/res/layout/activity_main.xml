<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fya.haque.findyouranswer.MainActivity"
    android:background="@drawable/bg_gradient">

    <EditText
        android:id="@+id/et_question"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint="@string/ask_your_question"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="@color/colorAccent"
        />

    <Button
        android:id="@+id/btn_find_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_answer"
        android:background="@color/bg_gradient_start"
        android:padding="10dp"
        android:layout_below="@+id/et_question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:text="Welcome"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_find_answer"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
